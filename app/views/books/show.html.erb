<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= render 'users/list' %>
     <%= render 'books/list', book:@book %>
    </div>

     <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
         <table class="table">
           <tbody>
             <tr>
               <th>
                 <%= link_to user_path(@books.user_id) do %>
                 <%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, format: 'jpeg', fallback: 'no_image.jpg' %><br/>
                 <%= @books.user.name %>
                 <% end %>
               </th>
               <th>
                 <%= link_to book_path(@books.id) do %>
                 <%= @books.title %>
                 <% end %>
               </th>
               <th>
                 <%= @books.body %>
               </th>
               <% if @books.user_id == current_user.id %>
               <th><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-success btn-sm" %></th>
               <th><%= link_to "Destroy", book_path(@books.id), method: :delete, data:{confirm: "本当に削しますか？"}, class: "btn btn-danger btn-sm" %></th>
               <% end %>
             </tr>
           </tbody>
         </table>
     </div>
  </div>
</div>