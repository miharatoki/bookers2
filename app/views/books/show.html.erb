<%= flash[:notice] %>
<%= render 'users/list' %>
<%= render 'books/list', book:@book %>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <th>
        <%= link_to user_path(@books.user_id) do %>
        <%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, format: 'jpeg', fallback: 'no_image.jpg' %>
        <%= @books.user.name %>
        <% end %>
      </th>
      <th>
        <%= link_to book_path(@books.id) do %>
        <%= @books.title %>
        <% end %>
      </th>
      <th>
        <%= @books.body %>
      </th>
      <th><%= link_to "edit", edit_book_path(@books.id) %></th>
      <th><%= link_to "Destroy", book_path(@books.id), method: :delete, data:{confirm: "本当に削しますか？"} %></th>
    </tr>
  </tbody>
</table>