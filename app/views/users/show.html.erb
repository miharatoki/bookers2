<div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/list' %>
        <%= render 'books/list', book:@book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <table class="table table-hover ">
          <thead>
              <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <th>
                <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: 'no_image.jpg' %>
              </th>
              <th>
                <%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
              </th>
              <th>
                <%= book.body %>
              </th>
            </tr>
            <% end %>

          </tbody>

          </table>
      </div>
    </div>
</div>